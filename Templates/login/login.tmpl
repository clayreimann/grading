<%inherit file="../base.html" />
<%block name="title">
  <title>Log In</title>
</%block>

% if user == Undefined:
  <form method="POST">
    % if error:
      <div class="error">
        ${error}
      </div>
    % endif
    <label>Username</label>
    <input type="text" name="username" value="${username}">

    <label>Password</label>
    <input type="password" name="password">
    <input type="submit" value="Log in">
  </form>
% else:
  <p>Hello ${user['name']}!</p>
% endif